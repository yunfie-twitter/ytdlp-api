# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://ytdlp:ytdlp_password@postgres:5432/ytdlp_api

# Redis
REDIS_URL=redis://redis:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=3

# Queue Management
MAX_CONCURRENT_DOWNLOADS=3

# Auto-delete (seconds)
AUTO_DELETE_AFTER=3600

# yt-dlp Settings (Optional)
YTDLP_PROXY=
YTDLP_COOKIES_FILE=

# GPU Encoding Support
ENABLE_GPU_ENCODING=false
GPU_ENCODER_TYPE=auto  # Options: auto, nvenc, vaapi, qsv
GPU_ENCODER_PRESET=medium  # Options: fast, medium, slow

# aria2 External Downloader
ENABLE_ARIA2=false
ARIA2_MAX_CONNECTIONS=16
ARIA2_SPLIT=16

# Deno JavaScript Runtime
ENABLE_DENO=false
DENO_PATH=/usr/local/bin/deno

# Security
SECRET_KEY=change-this-to-a-random-secret-key
CORS_ORIGINS=*