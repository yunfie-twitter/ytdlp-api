# Server Settings
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://ytdlp:ytdlp_password@postgres:5432/ytdlp_api

# Redis
REDIS_URL=redis://redis:6379/0

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=3

# Queue Management
MAX_CONCURRENT_DOWNLOADS=3

# Auto-delete completed tasks after (seconds)
AUTO_DELETE_AFTER=3600

# Download storage path
DOWNLOAD_DIR=/app/downloads

# yt-dlp Settings
YTDLP_COOKIES_FILE=
YTDLP_PROXY=

# Security
SECRET_KEY=change-this-to-random-secret-key-in-production
CORS_ORIGINS=*